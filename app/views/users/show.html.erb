<% provide(:title, @user.name) %>

<div class="row">
		<div class="container">

			<div role="navigation">
				<ul class="nav nav-justified" style="border-bottom: 2px solid #ccc;margin-bottom: 20px;">
					<li><%= link_to 'Portfolio',		'#' %></li>
					<li><%= link_to 'Transactions',	'#' %></li>
					<li><%= link_to 'Performance',	'#' %></li>
					<li><%= link_to 'Watchlists',		'#' %></li>
				</ul>
			</div>

		</div><!-- /.container -->
</div><!-- /.row -->


<div class="row">
	<div class="col-sm-12">
		<h3>Current Holdings</h3>

		<% if @user.options.any? %>
		<h4>Options (<%= @user.options.count %>)</h4>
		<table class="table table-striped table-hover text-center" cellpadding="0" cellpadding="0">
		  <thead>
		    <tr>
		      <th scope="col">ticker</th>
		      <th scope="col">b/s</th>
		      <th scope="col">c/p</th>
		      <th scope="col">contracts</th>
		      <th scope="col">size</th>
		      <th scope="col">expiration</th>
		      <th scope="col">strike</th>
		      <th scope="col">entry$</th>
		      <th scope="col">b fee</th>
		      <th scope="col">exit $</th>
		      <th scope="col">s fee</th>
		      <th scope="col">actions</th>
		    </tr>
		  </thead>
		  <tbody>

			<%= render @options %>

		  </tbody>
		</table>
		<% end %>


		<% if @user.stocks.any? %>
			<h4>Stocks (<%= @user.stocks.count %>)</h4>
			<table class="table table-striped table-hover text-center" cellpadding="0" cellpadding="0">
			  <thead>
			    <tr>
			      <th>ticker</th>
			      <th>shares</th>
			      <th>entry $</th>
			      <th>entry fee</th>
			      <th>exit $</th>
			      <th>exit fee</th>
			      <th>actions</th>
			    </tr>
			  </thead>
			  <tbody>

					<%= render @stocks %>

			  </tbody>
			</table>
		<% end %>


