<% provide(:title, 'Sign up') %>

<div class="row">
	<div class="col-sm-6 col-sm-offset-3">
		<h1>Sign up</h1>
	
		<%= form_for(@user) do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.text_field :password %>

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.text_field :password_confirmation %>

			<%= f.submit "Create Account", class: "btn btn-primary" %>
		<% end %>	
	</div>
</div>

