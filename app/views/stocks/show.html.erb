<div class="row">
  <div class="col-xs-12 col-sm-4">

    <div class="btn-group btn-group-xs" role="group" aria-label="">
      <%= link_to '<- Back to Stocks', stocks_path, class: "btn btn-default" %>
    </div>

    <h1><%= @stock.ticker %></h1>

    <table class="table table-striped" cellpadding="0" cellpadding="0">
      <tr>
        <th scope="row">Current</th>
        <td>{{ cur.price }}</td>
      </tr>
      <tr>
        <th scope="row">Shares</th>
        <td><%= @stock.shares %></td>
      </tr>
      <tr>
        <th scope="row">Entry $</th>
        <td><%= number_with_precision @stock.entryprice, :precision => 4 %></td>
      </tr>
      <tr>
        <th scope="row">Entry fee</th>
        <td><%= number_to_currency @stock.entryfee %></td>
      </tr>
      <tr>
        <th scope="row">Gross Liquidity</th>
        <td><%= number_to_currency @stock.gross_liquidity, :precision => 2 %></td>
      </tr>
      <tr>
        <th scope="row">Net Liquidity</th>
        <td><%= number_to_currency @stock.net_liquidity, :precision => 2 %></td>
      </tr>
      <tr>
        <th scope="row">Entry Date</th>
        <td><%= @stock.entrydate.to_s(:trade_date) %></td>
      </tr>
      <tr>
        <th scope="row">Days Held</th>
        <td><%= time_ago_in_words(@stock.entrydate) %></td>
      </tr>

      <% if @stock.exitdate %>
        <tr>
          <th scope="row">Exit Date</th>
          <td><%= @stock.exitdate.to_s(:trade_date) %></td>
        </tr>
      <% end %>

      <% if @stock.exitprice %>
        <tr>
          <th scope="row">Exit $</th>
          <td><%= number_to_currency @stock.exitprice, :precision => 4 %></td>
        </tr>
      <% end %>

      <% if @stock.exitfee %>
        <tr>
          <th scope="row">Exit fee</th>
          <td><%= number_to_currency @stock.exitfee %></td>
        </tr>
      <% end %>

    </table>

    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group btn-group-xs" role="group" aria-label="">
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'New Stock', new_stock_path%></button>
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_stock_path(@stock) %></button>
      </div>
    </div><!-- /.btn-toolbar -->
  </div><!-- /.col-md-4 -->

  <div class="col-xs-12 col-sm-8">
    {{ charts }}
    <br />
    {{ charts }}
  </div><!-- /.col-md-8 -->

</div><!-- /.row -->


<br /><br />


<div class="row">
  <div class="container">

    <h3><%= @stock.ticker %> History</h3>

    <hr />

    <%= render 'shared/history_stocks' %>

  </div><!-- /.container -->
</div><!-- /.row -->