<div class="row">
  <div class="col-xs-12 col-sm-4">
    <h1><%= @stock.ticker %></h1>
    <table class="table" cellpadding="0" cellpadding="0">
      <tr>
        <th>shares</th>
        <td><%= @stock.shares %></td>
      </tr>
      <tr>
        <th>entry $</th>
        <td><%= number_with_precision @stock.entryprice, :precision => 4 %></td>
      </tr>
      <tr>
        <th>entry fee</th>
        <td><%= number_with_precision @stock.entryfee, :precision => 2 %></td>
      </tr>
      <tr>
        <th>exit $</th>
        <td><%= number_with_precision @stock.exitprice, :precision => 4 %></td>
      </tr>
      <tr>
        <th>exit fee</th>
        <td><%= number_with_precision @stock.exitfee, :precision => 2 %></td>
      </tr>
    </table>

    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group btn-group-sm" role="group" aria-label="">
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'New Stock', new_stock_path%></button>
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_stock_path(@stock) %></button>
      </div>
      <div class="btn-group btn-group-sm" role="group" aria-label="">
        <%= link_to 'All Stocks', stocks_path, class: "btn btn-default" %>
      </div>
    </div><!-- /.btn-toolbar -->
  </div><!-- /.col-md-4 -->

  <div class="col-xs-12 col-sm-8">
    <%= image_tag("charts-placeholder.jpg", size: "600x300") %>

  </div><!-- /.col-md-8 -->

</div><!-- /.row -->

<hr />

<h3><%= @stock.ticker %> History</h3>
<table class="table table-striped" cellpadding="0" cellpadding="0">
  <thead>
    <tr>
      <th>ticker</th>
      <th>shares</th>
      <th>entry $</th>
      <th>entry fee</th>
      <th>exit $</th>
      <th>exit fee</th>
      <th>p/</th>
      <th>days held</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @stock.ticker %></td>
      <td><%= @stock.shares %></td>
      <td><%= number_with_precision @stock.entryprice, :precision => 4 %></td>
      <td><%= number_with_precision @stock.entryfee, :precision => 2 %></td>
      <td><%= number_with_precision @stock.exitprice, :precision => 4 %></td>
      <td><%= number_with_precision @stock.exitfee, :precision => 2 %></td>
      <td>.</td>
      <td>.</td>
    </tr>
  </tbody>
</table>