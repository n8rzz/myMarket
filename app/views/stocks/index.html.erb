<table class="table" cellpadding="0" cellpadding="0">
  <thead>
    <tr>
      <th>ticker</th>
      <th>shares</th>
      <th>entry $</th>
      <th>entry fee</th>
      <th>exit $</th>
      <th>exit fee</th>
      <th colspan="3">actions</th>
    </tr>
  </thead>
  <tbody>

  <% @stocks.each do |stock| %>
    <tr>
      <td><%= link_to stock.ticker, stock %></td>
      <td><%= stock.shares %></td>
      <td><%= number_with_precision stock.entryprice, :precision => 4 %></td>
      <td><%= number_with_precision stock.entryfee, :precision => 2 %></td>
      <td><%= number_with_precision stock.exitprice, :precision => 4 %></td>
      <td><%= number_with_precision stock.exitfee, :precision => 2 %></td>
      <td><%= link_to 'Show', stock %></td>
      <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
      <td><%= link_to 'Delete', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

  </tbody>
</table>

<p><%= link_to "New Stock", new_stock_path, class: "btn btn-primary" %></p>
