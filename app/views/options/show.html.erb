<div class="row">
  <div class="col-xs-12 col-sm-4">

    <div class="btn-group btn-group-xs" role="group" aria-label="">
      <%= link_to '<- Back to Options', options_path, class: "btn btn-default" %>
    </div>

    <h1><%= @option.ticker %></h1>

    <table class="table table-striped" cellpadding="0" cellpadding="0">
        <tr>
          <th scope="row">b/s</th>
          <td><%= @option.side %></td>
        </tr>
        <tr>
          <th scope="row">c/p</th>
          <td><%= @option.optiontype %></td>
        </tr>
        <tr>
          <th>contracts</th>
          <td><%= @option.contracts %></td>
        </tr>
        <tr>
          <th scope="row">size</th>
          <td><%= @option.size %></td>
        </tr>
        <tr>
          <th scope="row">expiration</th>
          <td><%= @option.expiration %></td>
        </tr>
        <tr>
          <th scope="row">strike</th>
          <td><%= @option.strike %></td>
        </tr>
        <tr>
          <th scope="row">entry$</th>
          <td><%= @option.entryprice %></td>
        </tr>
        <tr>
          <th scope="row">b fee</th>
          <td><%= @option.entryfee %></td>
        </tr>
        <tr>
          <th scope="row">exit $</th>
          <td><%= @option.exitprice %></td>
        </tr>
        <tr>
          <th scope="row">s fee</th>
          <td><%= @option.exitfee %></td>
        </tr>
      </tbody>
    </table>

    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group btn-group-xs" role="group" aria-label="">
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'Add', new_option_path%></button>
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_option_path(@option) %></button>
      </div>
    </div><!-- /.btn-toolbar -->

  </div><!-- /.col-md-4 -->

  <div class="col-xs-12 col-sm-8">
    <%= image_tag("charts-placeholder.jpg", size: "600x300") %>
  </div><!-- /.col-sm-8 -->
</div><!-- /.row -->


<hr />

<h3><%= @option.ticker %> History</h3>
<table class="table table-striped" cellpadding="0" cellpadding="0">
  <thead>
    <tr>
      <th scope="col">ticker</th>
      <th scope="col">b/s</th>
      <th scope="col">c/p</th>
      <th scope="col">contracts</th>
      <th scope="col">size</th>
      <th scope="col">expiration</th>
      <th scope="col">strike</th>
      <th scope="col">entry$</th>
      <th scope="col">b fee</th>
      <th scope="col">exit $</th>
      <th scope="col">s fee</th>
      <th scope="col">p/l</th>
      <th scope="col">days held</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @option.ticker %></td>
      <td><%= @option.side %></td>
      <td><%= @option.optiontype %></td>
      <td><%= @option.contracts %></td>
      <td><%= @option.size %></td>
      <td><%= @option.expiration %></td>
      <td><%= @option.strike %></td>
      <td><%= @option.entryprice %></td>
      <td><%= @option.entryfee %></td>
      <td><%= @option.exitprice %></td>
      <td><%= @option.exitfee %></td>
      <td>.</td>
      <td>.</td>
    </tr>
  </tbody>
</table>
