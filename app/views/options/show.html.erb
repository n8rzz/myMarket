<div class="row">
  <div class="col-xs-12 col-sm-4">

    <div class="btn-group btn-group-xs" role="group" aria-label="">
      <%= link_to '<- Back to Options', options_path, class: "btn btn-default" %>
    </div>

    <h1><%= @option.ticker %></h1>

    <table class="table table-striped" cellpadding="0" cellpadding="0">
        <tr>
          <th scope="row">Entry Date</th>
          <td><%= @option.entrydate.to_s(:trade_date) %></td>
        <tr>
          <th scope="row">Buy/Sell</th>
          <td><%= @option.side %></td>
        </tr>
        <tr>
          <th scope="row">Call/Put</th>
          <td><%= @option.optiontype %></td>
        </tr>
        <tr>
          <th scope="row">Contracts</th>
          <td><%= @option.contracts %></td>
        </tr>
        <tr>
          <th scope="row">Size</th>
          <td><%= @option.size %></td>
        </tr>
        <tr>
          <th scope="row">Expiration</th>
          <td><%= @option.expiration %></td>
        </tr>
        <tr>
          <th scope="row">Strike</th>
          <td><%= @option.strike %></td>
        </tr>
        <tr>
          <th scope="row">Entry $</th>
          <td><%= @option.entryprice %></td>
        </tr>
        <tr>
          <th scope="row">Entry Fee</th>
          <td><%= number_to_currency @option.entryfee %></td>
        </tr>

        <% if @option.exitprice %>
          <tr>
            <th scope="row">Exit $</th>
            <td><%= @option.exitprice %></td>
          </tr>
        <% end %>

        <% if @option.exitfee %>
          <tr>
            <th scope="row">Sell fee</th>
            <td><%= @option.exitfee %></td>
          </tr>
        <% end %>

        <tr>
          <th scope="row">Days Held</th>
          <td><%= time_ago_in_words(@option.entrydate) %></td>
        </tr>
      </tbody>
    </table>

    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group btn-group-xs" role="group" aria-label="">
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'Add', new_option_path%></button>
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_option_path(@option) %></button>
      </div>
    </div><!-- /.btn-toolbar -->

  </div><!-- /.col-md-4 -->

  <div class="col-xs-12 col-sm-8">
    {{ charts }}
    <br />
    {{ charts }}
  </div><!-- /.col-sm-8 -->

</div><!-- /.row -->

<br /><br />

<div class="row">
  <div class="container">


<h3><%= @option.ticker %> History</h3>

<hr />

<%= render 'shared/history_options' %>

  </div><!-- /.container -->
</div><!-- /.row -->