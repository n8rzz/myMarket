<div class="row">
  <div class="col-xs-12 col-sm-4">

    <h1><%= @option.ticker %></h1>
    <table class="table table-striped" cellpadding="0" cellpadding="0">
        <tr>
          <th>b/s</th>
          <td><%= @option.side %></td>
        </tr>
        <tr>
          <th>c/p</th>
          <td><%= @option.optiontype %></td>
        </tr>
        <tr>
          <th>contracts</th>
          <td><%= @option.contracts %></td>
        </tr>
        <tr>
          <th>size</th>
          <td><%= @option.size %></td>
        </tr>
        <tr>
          <th>expiration</th>
          <td><%= @option.expiration %></td>
        </tr>
        <tr>
          <th>strike</th>
          <td><%= @option.strike %></td>
        </tr>
        <tr>
          <th>entry$</th>
          <td><%= @option.entryprice %></td>
        </tr>
        <tr>
          <th>b fee</th>
          <td><%= @option.entryfee %></td>
        </tr>
        <tr>
          <th>exit $</th>
          <td><%= @option.exitprice %></td>
        </tr>
        <tr>
          <th>s fee</th>
          <td><%= @option.exitfee %></td>
        </tr>
      </tbody>
    </table>

    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group btn-group-xs" role="group" aria-label="">
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'Add', new_option_path%></button>
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_option_path(@option) %></button>
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> <%= link_to 'Delete', @option, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </div>
      <div class="btn-group btn-group-xs" role="group" aria-label="">
        <%= link_to 'All Options', options_path, class: "btn btn-default" %>
      </div>
    </div><!-- /.btn-toolbar -->

  </div><!-- /.col-md-4 -->

  <div class="col-xs-12 col-sm-8">
    <%= image_tag("charts-placeholder.jpg", size: "600x300") %>
  </div><!-- /.col-sm-8 -->
</div><!-- /.row -->


<hr />

<h4>{{ ticker }} History</h4>
<table class="table table-striped" cellpadding="0" cellpadding="0">
  <thead>
    <tr>
      <th>ticker</th>
      <th>b/s</th>
      <th>c/p</th>
      <th>contracts</th>
      <th>size</th>
      <th>expiration</th>
      <th>strike</th>
      <th>entry$</th>
      <th>b fee</th>
      <th>exit $</th>
      <th>s fee</th>
      <th>p/l</th>
      <th>days held</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @option.ticker %></td>
      <td><%= @option.side %></td>
      <td><%= @option.optiontype %></td>
      <td><%= @option.contracts %></td>
      <td><%= @option.size %></td>
      <td><%= @option.expiration %></td>
      <td><%= @option.strike %></td>
      <td><%= @option.entryprice %></td>
      <td><%= @option.entryfee %></td>
      <td><%= @option.exitprice %></td>
      <td><%= @option.exitfee %></td>
      <td>.</td>
      <td>.</td>
    </tr>
  </tbody>
</table>
