<!-- title -->

<h3>Options
  <button type="button" class="btn btn-xs btn-default">
    <span class="glyphicon glyphicon-plus"></span> <%= link_to 'New Option', new_option_path %>
  </button>
</h3>

<table class="table table-striped table-hover text-center" cellpadding="0" cellpadding="0">
  <thead>
    <tr>
      <th scope="col">ticker</th>
      <th scope="col">b/s</th>
      <th scope="col">c/p</th>
      <th scope="col">contracts</th>
      <th scope="col">size</th>
      <th scope="col">expiration</th>
      <th scope="col">strike</th>
      <th scope="col">entry$</th>
      <th scope="col">exit $</th>
      <th scope="col">b fee</th>
      <th scope="col">s fee</th>
      <th scope="col">en date</th>
      <th scope="col">ex date</th>
      <th scope="col">days held</th>
      <th scope="col">actions</th>
    </tr>
  </thead>
  <tbody>

  <% @options.each do |option| %>
    <tr>
      <td><%= link_to option.ticker, option %></td>
      <td><%= option.side %></td>
      <td><%= option.optiontype %></td>
      <td><%= option.contracts %></td>
      <td><%= option.size %></td>
      <td><%= option.expiration %></td>
      <td><%= option.strike %></td>
      <td><%= option.entryprice %></td>
      <td><%= option.exitprice %></td>
      <td><%= option.entryfee %></td>
      <td><%= option.exitfee %></td>
      <td><%= option.entrydate.to_s(:trade_date) %></td>
      <td><%= option.exitdate.to_s.try(:trade_date) %></td>
      <td><%= time_ago_in_words(option.entrydate) %></td>
      <td>
        <div class="btn-toolbar" role="toolbar">
          <div class="btn-group btn-group-xs" role="group" aria-label="">
            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> <%= link_to 'View', option %></button>
            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_option_path(option) %></button>
          </div>
         </div>
      </td>
    </tr>
  <% end %>

  </tbody>
</table>